<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ffffff_fillet_10">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/color_333333"
        android:text="@string/bind_account_error"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_333333"
        android:text="@string/bind_error_hint"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_40"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/dp_120"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_666666"
            android:gravity="center"
            android:background="@drawable/bg_ffffff_fillet_ececec_2"
            android:text="@string/back_login"/>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="@dimen/dp_120"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_FFFFFF"
            android:layout_marginStart="@dimen/dp_20"
            android:gravity="center"
            android:background="@drawable/bg_00c8f8_fillet_2"
            android:text="@string/other_mobile_register"/>
    </LinearLayout>
</LinearLayout>