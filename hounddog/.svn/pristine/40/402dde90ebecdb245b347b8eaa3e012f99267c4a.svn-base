<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_FFFFFF">

    <include layout="@layout/include_title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/color_F7F7F7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_mobile_area"
            android:layout_width="@dimen/dp_70"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_phone_area"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/color_333333"
                tools:text="+86"
                android:layout_marginEnd="@dimen/dp_5"
                android:gravity="center_vertical"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_6"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/dp_17"
                android:src="@drawable/icon_mobile_down"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dp_14"
            android:background="@color/color_CECECE"
            android:layout_gravity="center_vertical" />

        <com.slxk.hounddog.mvp.ui.view.ClearEditText
            android:id="@+id/edt_mobile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@color/transparent"
            android:layout_marginStart="@dimen/dp_12"
            android:textSize="@dimen/sp_13"
            android:inputType="number"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_999999"
            android:hint="@string/input_new_phone"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_E5E5E5"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_70"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_333333"
            android:text="@string/mobile_code"
            android:gravity="center_vertical"
            tools:ignore="RtlSymmetry" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dp_14"
            android:background="@color/color_CECECE"
            android:layout_gravity="center_vertical" />

        <com.slxk.hounddog.mvp.ui.view.ClearEditText
            android:id="@+id/edt_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:textSize="@dimen/sp_13"
            android:inputType="number"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_12"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_999999"
            android:hint="@string/input_code_hint"/>

        <TextView
            android:id="@+id/tv_send_code"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_25"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_ffffff_fillet_00c8f8_10"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/color_00C8F8"
            android:gravity="center"
            android:text="@string/send_code"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:background="@color/color_E5E5E5"/>

    <Button
        android:id="@+id/btn_bind"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/bg_00c8f8_fillet_6"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_35"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        android:text="@string/confirm"
        android:textColor="@color/color_FFFFFF"/>

</LinearLayout>