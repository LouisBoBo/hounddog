<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_FFFFFF">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_E1E1E1"/>

    <ImageView
        android:id="@+id/iv_navigation"
        android:layout_width="@dimen/dp_29"
        android:layout_height="@dimen/dp_29"
        android:padding="@dimen/dp_5"
        android:src="@drawable/icon_navigation"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_17"/>

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_marginStart="@dimen/dp_12"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_333333"
        android:text="@string/distance_between_people_and_equipment"/>

    <TextView
        android:id="@+id/tv_address_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_distance"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="@string/address"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_distance"
        android:layout_toEndOf="@+id/tv_address_hint"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_toStartOf="@+id/iv_navigation"
        tools:text="@string/address"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_12" />

</RelativeLayout>