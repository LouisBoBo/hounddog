<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_22"/>

    <RelativeLayout
        android:id="@+id/rl_location_mode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/color_00C8F8">

        <ImageView
            android:id="@+id/iv_more_function"
            android:layout_width="@dimen/dp_27"
            android:layout_height="@dimen/dp_24"
            android:padding="@dimen/dp_5"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_7"
            android:src="@drawable/icon_more_function"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_27"
            android:orientation="horizontal"
            android:layout_centerInParent="true">

            <Button
                android:id="@+id/btn_wireless"
                android:layout_width="@dimen/dp_83"
                android:layout_height="match_parent"
                android:background="@drawable/bg_1464f6_fillet_3"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/color_FFFFFF"
                android:gravity="center"
                android:text="@string/wireless_positioning"/>

            <Button
                android:id="@+id/btn_network"
                android:layout_width="@dimen/dp_83"
                android:layout_height="match_parent"
                android:background="@drawable/bg_ffffff_fillet_3"
                android:layout_marginStart="@dimen/dp_10"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/color_333333"
                android:gravity="center"
                android:text="@string/network_positioning"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>