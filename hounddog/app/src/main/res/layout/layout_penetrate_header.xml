<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_FFFFFF">

    <LinearLayout
        android:id="@+id/ll_command_options"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_24"
        android:orientation="horizontal"
        android:background="@drawable/bg_ffffff_a4a4a4_12"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginStart="@dimen/dp_14">

        <TextView
            android:id="@+id/tv_command_options_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_333333"
            android:text="@string/command_options"/>

        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_12"
            android:src="@drawable/icon_down_small"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edt_value"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:background="@color/color_F4F4F4"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:textSize="@dimen/sp_12"
        android:gravity="top"
        android:maxLength="70"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_999999"
        android:padding="@dimen/dp_15"
        android:hint="@string/command_options_hint"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dp_12"
        android:gravity="end">

        <TextView
            android:id="@+id/tv_clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_20"
            android:textColor="@color/color_000000"
            android:text="@string/clear_empty"/>

        <TextView
            android:id="@+id/tv_confirm_send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_10"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:background="@drawable/bg_00c8f8_fillet_10"
            android:textColor="@color/color_FFFFFF"
            android:text="@string/confirm_send"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_F4F4F4">

        <TextView
            android:id="@+id/tv_history_send_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_333333"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_30"
            android:text="@string/history_send"/>
    </LinearLayout>

</LinearLayout>