<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_F4F4F4">

    <include layout="@layout/include_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_ffffff_fillet_10_top">

                <RelativeLayout
                    android:id="@+id/rl_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_name_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/color_333333"
                        android:layout_marginStart="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:text="@string/device_name"/>

                    <TextView
                        android:id="@+id/tv_device_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/color_333333"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_15"
                        tools:text="@string/device_name"/>

                    <EditText
                        android:id="@+id/edt_device_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:background="@drawable/bg_f8f8f8_5"
                        android:layout_marginEnd="@dimen/dp_12"
                        android:layout_toEndOf="@+id/tv_name_hint"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/color_333333"
                        android:layout_marginTop="@dimen/dp_7"
                        android:gravity="center_vertical|end"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_20"
                        android:visibility="gone"
                        android:textColorHint="@color/color_999999"
                        android:hint="@string/input_device_name"/>
                </RelativeLayout>

                <View
                    android:id="@+id/view_device_name"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_E5E5E5"
                    android:layout_below="@+id/rl_name"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginEnd="@dimen/dp_12"/>

                <TextView
                    android:id="@+id/tv_account_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_333333"
                    android:layout_below="@+id/view_device_name"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="@string/device_number"/>

                <TextView
                    android:id="@+id/tv_device_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_333333"
                    android:layout_below="@+id/view_device_name"
                    android:gravity="end"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    tools:text="@string/device_number"/>

                <View
                    android:id="@+id/view_device_account"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_E5E5E5"
                    android:layout_below="@+id/tv_device_account"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginEnd="@dimen/dp_12"/>

                <TextView
                    android:id="@+id/tv_device_type_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_333333"
                    android:layout_below="@+id/view_device_account"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="@string/device_type"/>

                <TextView
                    android:id="@+id/tv_device_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_333333"
                    android:layout_below="@+id/view_device_account"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    tools:text="@string/device_type"/>

                <View
                    android:id="@+id/view_device_type"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_E5E5E5"
                    android:layout_below="@+id/tv_device_type"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginEnd="@dimen/dp_12"/>

                <TextView
                    android:id="@+id/device_status_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_333333"
                    android:layout_below="@+id/view_device_type"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="@string/device_status"/>

                <TextView
                    android:id="@+id/tv_device_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_device_type"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:textColor="@color/color_F22E13"
                    android:textSize="@dimen/sp_13"
                    tools:text="@string/device_status" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/color_FFFFFF">

                <TextView
                    android:id="@+id/location_time_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_333333"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="@string/location_time"/>

                <TextView
                    android:id="@+id/tv_location_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_333333"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    tools:text="@string/location_time"/>

                <View
                    android:id="@+id/view_contact_number"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_E5E5E5"
                    android:layout_below="@+id/tv_location_time"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginEnd="@dimen/dp_12"/>

                <TextView
                    android:id="@+id/tv_address_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_333333"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_below="@+id/view_contact_number"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="@string/location_address"/>

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_333333"
                    android:layout_below="@+id/view_contact_number"
                    android:layout_toEndOf="@+id/tv_address_hint"
                    android:layout_alignParentEnd="true"
                    android:gravity="center_vertical|end"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_10"
                    tools:text="@string/address"/>

                <View
                    android:id="@+id/view_address"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_E5E5E5"
                    android:layout_below="@+id/tv_address"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginEnd="@dimen/dp_12"/>

                <TextView
                    android:id="@+id/tv_iccid_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_address"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_333333"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="@string/iccid_number"/>

                <TextView
                    android:id="@+id/tv_device_iccid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_address"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_333333"
                    android:layout_alignParentEnd="true"
                    android:gravity="end"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    tools:text="@string/iccid_number"/>

                <TextView
                    android:id="@+id/tv_copy_iccid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_address"
                    android:layout_toStartOf="@+id/tv_device_iccid"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_00C8F8"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="@string/copy"/>

                <View
                    android:id="@+id/view_device_iccid"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_E5E5E5"
                    android:layout_below="@+id/tv_device_iccid"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginEnd="@dimen/dp_12"/>

                <TextView
                    android:id="@+id/opening_time_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_333333"
                    android:layout_below="@+id/view_device_iccid"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="@string/opening_time"/>

                <TextView
                    android:id="@+id/tv_opening_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_333333"
                    android:layout_below="@+id/view_device_iccid"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    tools:text="@string/opening_time"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/color_FFFFFF">

                <RelativeLayout
                    android:id="@+id/rl_contact_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_contact_person_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/color_333333"
                        android:layout_marginStart="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:text="@string/contact_person"/>

                    <TextView
                        android:id="@+id/tv_contact_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/color_333333"
                        android:layout_alignParentEnd="true"
                        android:gravity="end"
                        android:layout_marginEnd="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_15"
                        tools:text="@string/contact_person"/>

                    <EditText
                        android:id="@+id/edt_contact_person"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:background="@drawable/bg_f8f8f8_5"
                        android:layout_marginEnd="@dimen/dp_12"
                        android:layout_toEndOf="@+id/tv_contact_person_hint"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/color_333333"
                        android:layout_marginTop="@dimen/dp_7"
                        android:gravity="center_vertical|end"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_20"
                        android:visibility="gone"
                        android:inputType="text"
                        android:textColorHint="@color/color_999999"
                        android:hint="@string/input_contact_person"/>
                </RelativeLayout>

                <View
                    android:id="@+id/view_contact_person"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_E5E5E5"
                    android:layout_below="@+id/rl_contact_person"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginEnd="@dimen/dp_12"/>

                <RelativeLayout
                    android:id="@+id/rl_bind_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_contact_person">

                    <TextView
                        android:id="@+id/tv_bind_mobile_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/color_333333"
                        android:layout_marginStart="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:text="@string/contact_number"/>

                    <TextView
                        android:id="@+id/tv_contact_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:gravity="end"
                        android:textColor="@color/color_333333"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_15"
                        tools:text="@string/contact_number"/>

                    <EditText
                        android:id="@+id/edt_contact_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:background="@drawable/bg_f8f8f8_5"
                        android:layout_marginEnd="@dimen/dp_12"
                        android:layout_toEndOf="@+id/tv_bind_mobile_hint"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/color_333333"
                        android:layout_marginTop="@dimen/dp_7"
                        android:gravity="center_vertical|end"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_20"
                        android:visibility="gone"
                        android:inputType="number"
                        android:maxLength="20"
                        android:textColorHint="@color/color_999999"
                        android:hint="@string/input_contact_phone"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>