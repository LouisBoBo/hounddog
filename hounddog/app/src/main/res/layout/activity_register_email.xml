<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_F8F8F8">

    <include layout="@layout/include_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_FFFFFF"
        android:layout_marginTop="@dimen/dp_10">

        <com.slxk.hounddog.mvp.ui.view.ClearEditText
            android:id="@+id/edt_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@color/transparent"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_999999"
            android:inputType="text"
            android:hint="@string/input_account_three_hint"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_E5E5E5"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"/>

        <com.slxk.hounddog.mvp.ui.view.ClearEditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@color/transparent"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_999999"
            android:hint="@string/input_email_optional"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_E5E5E5"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:orientation="horizontal">

            <com.slxk.hounddog.mvp.ui.view.ClearEditText
                android:id="@+id/edt_code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:textSize="@dimen/sp_14"
                android:layout_marginEnd="@dimen/dp_10"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                android:hint="@string/input_email_code_hint"/>

            <TextView
                android:id="@+id/tv_send_code"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_25"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_ffffff_fillet_00c8f8_10"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/color_00C8F8"
                android:gravity="center"
                android:text="@string/send_code"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_E5E5E5"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"/>

        <com.slxk.hounddog.mvp.ui.view.ClearEditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@color/transparent"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:textSize="@dimen/sp_14"
            android:inputType="textPassword"
            android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM._"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_999999"
            android:hint="@string/input_password"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_E5E5E5"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"/>

        <com.slxk.hounddog.mvp.ui.view.ClearEditText
            android:id="@+id/edt_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@color/transparent"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:textSize="@dimen/sp_14"
            android:inputType="textPassword"
            android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM._"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_999999"
            android:hint="@string/input_password_confirm"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/bg_00c8f8_fillet_6"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        android:text="@string/register"
        android:textColor="@color/color_FFFFFF"/>

</LinearLayout>