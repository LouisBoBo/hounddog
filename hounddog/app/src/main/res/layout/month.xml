        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.slxk.hounddog.mvp.ui.view.data.calendar.CalendarRowView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_4">

            <TextView
