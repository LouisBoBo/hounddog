<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_200"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_track_info"
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ffffff_fillet_10"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_marker_imei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_333333"
            android:text="@string/device_number"/>

        <TextView
            android:id="@+id/tv_marker_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_333333"
            android:text="@string/name"/>

        <TextView
            android:id="@+id/tv_marker_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_333333"
            android:text="@string/time"/>

        <TextView
            android:id="@+id/tv_marker_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_333333"
            android:text="@string/address"/>
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/dp_13"
        android:layout_height="@dimen/dp_7"
        android:layout_gravity="center"
        android:src="@drawable/icon_arrow_down" />

</LinearLayout>